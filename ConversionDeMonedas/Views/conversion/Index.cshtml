@model Application.ViewModel.conversionViewModel

<div class="container mt-5">
    <div class="row">
        
        <div>
            <center>
            <img src="https://unitrade.do/wp-content/uploads/2017/08/banco-popular-dominicano-logo.jpg" alt="Imagen del Banco" class="img-fluid" />
            </center>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8 offset-md-2 shadow p-4">
            <div>
                <h2>Conversión de Moneda</h2>
                <p style="text-align: justify;">
                    Bienvenido al servicio de conversión de moneda del Banco popular. Utilice esta herramienta para convertir diferentes monedas con facilidad. Simplemente ingrese la cantidad que desea convertir, seleccione la moneda de origen y la moneda de destino, luego haga clic en "Convertir" para obtener el resultado.
                </p>

            </div>
            <center>
            <form asp-action="ConvertCurrency" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Amount">Cantidad:</label>
                        <input asp-for="Amount" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="FromCurrency">De:</label>
                        <select asp-for="FromCurrency" class="form-control">
                            <option value="peso">Peso</option>
                            <option value="dolar">Dólar</option>
                            <option value="euro">Euro</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ToCurrency">A:</label>
                        <select asp-for="ToCurrency" class="form-control">
                            <option value="peso">Peso</option>
                            <option value="dolar">Dólar</option>
                            <option value="euro">Euro</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Result">Resultado:</label>
                        <input asp-for="Result" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Convertir</button>
                </div>
            </form>
            </center>
        </div>
    </div>
</div>
